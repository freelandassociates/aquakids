<%= simple_form_for(@payment_plan_instalment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :payment_plan_id %>
    <%= f.input :due_date %>
    <%= f.input :payment_amount %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

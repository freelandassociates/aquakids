<!DOCTYPE html>
<html>
<head>
  <title>Aquakids</title>
  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
  <![endif]-->
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script type="text/javascript" src="http://twitter.github.com/bootstrap/assets/js/bootstrap-dropdown.js"></script>
</head>
<body>

  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container-fluid">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <%= link_to "Aquakids", schedules_path, :class => "brand" %>
        <div class="nav-collapse">
          <ul class="nav">


            <li class="dropdown">
              <a id="drop1" href="#" role="button" class="dropdown-toggle" data-toggle="dropdown">Classes <b class="caret"></b></a>
              <ul class="dropdown-menu" role="menu" aria-labelledby="drop1">
                <li role="presentation"><%= link_to 'AutoClass', autoclasses_autoclass_path %> </li>
                <li role="presentation" class="divider"></li>
                <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Separated link</a></li>
              </ul>
            </li>

            <li class="dropdown">
              <a id="drop2" href="#" role="button" class="dropdown-toggle" data-toggle="dropdown">Setup <b class="caret"></b></a>
              <ul class="dropdown-menu" role="menu" aria-labelledby="drop2">
                <li role="presentation"><%= link_to 'Locations', locations_path %> </li>
                <li role="presentation"><%= link_to 'Pools', facilities_path %> </li>
                <li role="presentation"><%= link_to 'Zones', zones_path %> </li>
                <li role="presentation"><%= link_to 'Types', types_path %> </li>
                <li role="presentation"><%= link_to 'Activities', activities_path %> </li>
                <li role="presentation"><%= link_to 'Sessions', programs_path %> </li>
                <li role="presentation"><%= link_to 'Levels', levels_path %> </li>
                <li role="presentation"><%= link_to 'Skills', skills_path %> </li>
                <li role="presentation"><%= link_to 'Teachers', teachers_path %> </li>
              </ul>
            </li>

          </ul>
        </div>
      </div>
    </div>
  </div>

<div class="container-fluid">

  <% flash.each do |name, msg| %>
    <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
      <a class="close" data-dismiss="alert">x</a>
      <%= msg  %>
    </div>
  <% end %>

  <div id="user_nav">
  	<% if user_signed_in? %>
  	  Logged in as <strong><%= current_user.email %></strong>.
  	  <%= link_to 'Edit profile', edit_user_registration_path %> |
  	  <%= link_to "Logout", destroy_user_session_path, method: :delete %>
  	<% else %>
  	  <%= link_to "Sign up", new_user_registration_path, :class => 'btn' %> 
  	  <%= link_to "Login", new_user_session_path, :class => 'btn' %>
  	<% end %>
  </div>

  <!-- Devise flash messages -->

  <%= yield %> 

</div>

</body>
</html>

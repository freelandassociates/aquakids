<%= simple_form_for @schedule, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :start_date %>
  <%= f.input :stop_date %>
  <%= f.input :sunday %>
  <%= f.input :monday %>
  <%= f.input :tuesday %>
  <%= f.input :wednesday %>
  <%= f.input :thursday %>
  <%= f.input :friday %>
  <%= f.input :saturday %>
  <%= f.input :start_time %>
  <%= f.input :stop_time %>
  <%= f.input :size %>
  <%= f.input :comments %>
  <%= f.association :level %>
  <%= f.association :type %>
  <%= f.association :location %>
  <%= f.association :facility %>
  <%= f.association :zone %>
  <%= f.association :activity %>
  <%= f.association :program %>
  <%= f.association :teacher %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                schedules_path, :class => 'btn' %>
  </div>
<% end %>

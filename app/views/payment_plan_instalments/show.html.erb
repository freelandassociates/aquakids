<%- model_class = PaymentPlanInstalment -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:payment_plan) %>:</strong></dt>
  <dd><%= @payment_plan_instalment.payment_plan.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:due_date) %>:</strong></dt>
  <dd><%= @payment_plan_instalment.due_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:payment_amount) %>:</strong></dt>
  <dd><%= number_to_currency(@payment_plan_instalment.payment_amount_dollars) %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              payment_plan_instalments_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_payment_plan_instalment_path(@payment_plan_instalment), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              payment_plan_instalment_path(@payment_plan_instalment),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
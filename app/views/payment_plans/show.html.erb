<%- model_class = PaymentPlan -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @payment_plan.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:payment_plan_fee) %>:</strong></dt>
  <dd><%= number_to_currency(@payment_plan.payment_plan_fee_dollars) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:per_lesson_cost) %>:</strong></dt>
  <dd><%= number_to_currency(@payment_plan.per_lesson_cost_dollars) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:session) %>:</strong></dt>
  <dd><%= @payment_plan.program.name %></dd>
        
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              payment_plans_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_payment_plan_path(@payment_plan), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              payment_plan_path(@payment_plan),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>